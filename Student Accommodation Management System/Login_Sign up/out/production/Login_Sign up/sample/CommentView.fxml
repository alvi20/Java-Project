<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" style="-fx-border-color: blue; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CommentViewController">
   <children>
      <TextArea fx:id="commentTestArea" maxHeight="75.0" style="-fx-border-color: orange; -fx-background-color: transparent; -fx-background-radius: 10; -fx-border-radius: 10;">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextArea>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#onEnterButtonTap" styleClass="loginSignupButton" stylesheets="@CSS/css.css" text="Comment" />
         </children>
      </HBox>
      <VBox fx:id="commentViewVBox" spacing="5.0" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
